<html>
    <head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <h1><%= title %></h1>
            <form action="/update" method="post">
                <input type="hidden" name="ID" value="<%= covidlist.ID %>">
                <div class = "form-group">
                    <label for="state">State Name:</label>
                    <input type="text" class="form-control" id="State_Name" placeholder="Enter State Name" name="State_Name" value="<%= covidlist.State_Name %>">
                </div>
                <div class = "form-group">
                    <label for="state">Date:</label>
                    <input type="date"  class="form-control" id="Date_of_Record" placeholder="Enter Date" name="Date_of_Record" value="<%= covidlist.Date_of_Record %>">
                </div>
                <div class = "form-group">
                    <label for="state">Number of Samples:</label>
                    <input type="text" class="form-control" id="numofsamp" placeholder="Enter Number" name="numofsamp" value="<%= covidlist.numofsamples %>">
                </div>
                <div class = "form-group">
                    <label for="state">Number of Deaths:</label>
                    <input type="text" class="form-control" id="No_of_Deaths" placeholder="Enter Number of Deaths" name="No_of_Deaths" value="<%= covidlist.No_of_Deaths %>">
                </div>
                <div class = "form-group">
                    <label for="state">Number of Positive Samples:</label>
                    <input type="text" class="form-control" id="No_of_Positive" placeholder="Enter Number of Positives" name="No_of_Positive" value="<%= covidlist.No_of_Positive %>">
                </div>
                <div class = "form-group">
                    <label for="state">Number of Negetive Samples:</label>
                    <input type="text" class="form-control" id="No_of_Negative" placeholder="Enter Number of Negetives" name="No_of_Negative" value="<%= covidlist.No_of_Negative %>">
                </div>
                <div class = "form-group">
                    <label for="state">Number of Discharges:</label>
                    <input type="text" class="form-control" id="No_of_Discharge" placeholder="Enter Number of Discharges" name="No_of_Discharge" value="<%= covidlist.No_of_Discharge %>">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            
        </div>
    </body>
</html>