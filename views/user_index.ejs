<html>
    <head>
        <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <h1><%- title %></h1>
            <a href="/add" class="btn btn-primary btn-sm">Add Data</a>
            <br>
            <br>

            <table class="table table-dark">
                <thead class="thead-dark">
                    <th>State Name</th>
                    <th>Date of Record</th>
                    <th>Number of Samples</th>
                    <th>Number of Deaths</th>
                    <th>Positive Samples</th>
                    <th>Negetive Samples</th>
                    <th>Number of Discharges</th>
                    <th>Action</th>
                </thead>
                <tbody>
                    <% covidlist.forEach(function(covidlist) {%>
                        <tr>
                            <td><%= covidlist.State_Name %></td>
                            <td><%= covidlist.Date_of_Record %></td>
                            <td><%= covidlist.No_of_Samples %></td>
                            <td><%= covidlist.No_of_Deaths %></td>
                            <td><%= covidlist.No_of_Positive %></td>
                            <td><%= covidlist.No_of_Negative %></td>
                            <td><%= covidlist.No_of_Discharge %></td>
                            <td>
                                <a href="edit/<%= covidlist.ID %>" class="btn btn-secondary btn-sm">Edit</a>
                                <a href="delete/<%= covidlist.ID %>" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        <% });%>
                </tbody>
            </table>
        </div>
    </body>
</html>